<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbackground"
    android:radius="5dp"
    >


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_description"
        android:layout_marginLeft="20dp"
        android:hint="Enter Your description"
        android:layout_below="@id/chose_bar2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="150dp"
            android:singleLine="false"
            android:gravity="top|start"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"/>

    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_address"
        android:layout_marginLeft="20dp"
        android:hint="Enter store address"
        android:layout_below="@id/phone_number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_name"
        android:layout_marginLeft="20dp"
        android:hint="Enter store name"
        android:layout_below="@+id/headline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/enter_name"
        android:hint="Enter phone number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"/>

    </com.google.android.material.textfield.TextInputLayout>





    <LinearLayout
        android:id="@+id/chose_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_price"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/define_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="17dp"

            />

        <CheckBox
            android:id="@+id/type_sitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/dog_sitter"
            android:buttonTint="@color/black"
            />

        <CheckBox
            android:id="@+id/type_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/dog_trainer"
            android:buttonTint="@color/black"
            />

        <CheckBox
            android:id="@+id/type_walker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/dog_walker"
            android:buttonTint="@color/black"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/chose_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chose_bar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/define_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="17dp"

            />

        <CheckBox
            android:id="@+id/type_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/pet_shops"
            android:buttonTint="@color/black"
            />

        <CheckBox
            android:id="@+id/type_vet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/veterinarian"
            android:buttonTint="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/get_description"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/enter_name"
            android:layout_marginLeft="210dp"
            app:srcCompat="@drawable/cancel_button" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/add_button" />


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_price"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/enter_address"
        android:hint="price"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"/>

    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        style="@style/Casual"
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Enter Store Details" />

</RelativeLayout>