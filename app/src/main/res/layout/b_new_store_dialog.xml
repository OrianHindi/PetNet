<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbackground"
    android:radius="5dp"
    >


    <EditText
        android:id="@+id/get_description"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_below="@id/chose_bar2"
        android:background="@drawable/text_input"
        android:gravity="center_horizontal"
        android:hint="Enter Your description"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/enter_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_input"
        android:gravity="center_horizontal"
        android:hint="Enter store address"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headline"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_input"
        android:gravity="center_horizontal"
        android:hint="Enter store name"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/enter_name"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_input"
        android:gravity="center_horizontal"
        android:hint="Enter phone number"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/chose_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_price"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/define_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="17dp"

            />

        <CheckBox
            android:id="@+id/type_sitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/dog_sitter"
            android:buttonTint="@color/black"
            />

        <CheckBox
            android:id="@+id/type_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/dog_trainer"
            android:buttonTint="@color/black"
            />

        <CheckBox
            android:id="@+id/type_walker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/dog_walker"
            android:buttonTint="@color/black"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/chose_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chose_bar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/define_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="17dp"

            />

        <CheckBox
            android:id="@+id/type_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/pet_shops"
            android:buttonTint="@color/black"
            />

        <CheckBox
            android:id="@+id/type_vet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/veterinarian"
            android:buttonTint="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_description"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/enter_name"
            android:layout_marginLeft="210dp"
            app:srcCompat="@drawable/cancel_button" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/add_button" />


    </LinearLayout>

    <EditText
        android:id="@+id/type_price"
        android:layout_marginTop="8dp"
        android:layout_below="@id/enter_address"
        android:background="@drawable/text_input"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="price"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Enter Store Details" />

</RelativeLayout>