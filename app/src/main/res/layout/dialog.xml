<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:radius="5dp"
    >


    <EditText
        android:id="@+id/Mail_getText"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_below="@+id/Mail_email"
        android:layout_marginTop="21dp"
        android:background="@drawable/text_input"
        android:gravity="center_horizontal"
        android:hint="Enter Your Messege"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Mail_subject"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/text_input"
        android:gravity="center_horizontal"
        android:hint="Subject"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Mail_email"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/Mail_subject"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_input"
        android:gravity="center_horizontal"
        android:hint="Email"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Mail_getText"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/Mail_cancel"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@id/Mail_getText"
            android:layout_marginLeft="210dp"
            app:srcCompat="@drawable/cancel" />

        <ImageView
            android:id="@+id/Mail_send"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/mailicon" />


    </LinearLayout>

</RelativeLayout>