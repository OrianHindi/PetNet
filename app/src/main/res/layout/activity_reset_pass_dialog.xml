<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:radius="5dp"
    android:background="@drawable/dialogbackground"
    >






    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_email"
        android:layout_marginLeft="20dp"
        android:hint="Email"
        android:layout_below="@+id/ContactUS"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"/>

    </com.google.android.material.textfield.TextInputLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/enter_email"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/Mail_cancel"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@id/Mail_getText"
            android:layout_marginLeft="210dp"
            app:srcCompat="@drawable/cancel" />

        <ImageView
            android:id="@+id/Mail_send"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/mailicon" />


    </LinearLayout>

    <TextView
        style="@style/Casual"
        android:id="@+id/ContactUS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Reset Passsword" />

</RelativeLayout>