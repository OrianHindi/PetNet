<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dog_card_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dog_card_background">
    <ImageView
        android:id="@+id/IV_dog_profile"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/main_logo" />

        <TextView
            android:id="@+id/TV_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Casual"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/anonymous"
            android:textSize="30dp" />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TV_uniqe_signs"
        android:textStyle="italic|bold"
        style="@style/Casual"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/uniqe_signs"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/TV_uniqe_signs_info"
        android:layout_width="wrap_content"
        style="@style/Casual"

        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/none"
        android:textSize="20dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_race"
            android:layout_width="wrap_content"
            style="@style/Casual"

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/pet_race"
            android:textStyle="bold|italic"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/TV_race_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/unknown"
            style="@style/Casual"

            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_gender"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/gender"
            style="@style/Casual"

            android:textSize="20dp" />
        <TextView
            android:id="@+id/TV_gender_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            style="@style/Casual"

            android:text="@string/unknown"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner name:"
            android:textStyle="bold|italic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            style="@style/Casual"

            android:textSize="20dp"/>

        <TextView
            android:id="@+id/TV_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unknown"
            style="@style/Casual"

            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:id="@+id/IV_check"
            android:layout_width="50dp"
            android:layout_marginLeft="66dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/phone_call"
            />

    </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>